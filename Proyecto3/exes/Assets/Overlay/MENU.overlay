overlay MENU
{
	zorder 200
	overlay_element MENU_PanelContainer Panel
	{
		left 0.0
		top 0.0
		width 1.0
		height 1.0

		overlay_element MENU_Text TextArea
		{
            metrics_mode relative
            font_name Metal-Mania
            char_height 0.0
            colour_top 0.4 0.4 0.8
            colour_bottom 1 0.2 0.2
            left 0.5
            top 0.8
            width 0.6
            caption "PRESS SPACE TO START"
            height 0.4
		}

		overlay_element Title Panel
        {
            left 0.15
		    top 0.15
		    width 0.7
		    height 0.4
            material TitleMaterial
        }
	}
}
